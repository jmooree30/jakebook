
<% if !user_signed_in? %>
<%= render 'devise/sessions/new' %>
<%= render 'devise/registrations/new' %>
<% else %>
    <h1>News Feed</h1>
    <div class="panel panel-header" >
	<% @posts.each do |post| %>
	<br>
	<div class='name'>
		<%= image_tag post.user.avatar.url(:thumb) %>
		<div class='namename'>
		<%= post.user.name %> shared:<br><br>
	</div>
	</div>
	<%= post.body %><br>
    <div class='name'>
	<%= link_to like_post_path(post), method: :put do %>
    <i class="glyphicon glyphicon-thumbs-up"></i>
	<%= post.get_upvotes.size %>
	<% end %>
	<%= link_to dislike_post_path(post), method: :put do %>
	<i class="glyphicon glyphicon-thumbs-down"></i>
	<%= post.get_downvotes.size %>
	<% end %>
	<br>
	</div>
	<div class="panel-footer">
		<%= form_for @comment do |c| %>
		<%= c.text_area :body, style: 'height:30px; border-radius:5px; width:25%; float:left;' %>
		<%= c.hidden_field :post_id, :value => post.id %>
	    <%= c.hidden_field :name, :value => current_user.name %>
		<%= c.submit "comment", style: "float:left;" %>
		<% end %><br><br>
		<% @comments.each do |z| %>
			<% if z.post_id == post.id %>
			<div class='commentname'>
			<%= z.name %> commented:
			</div><br>
			<div class="commentbody">
			<%= z.body %></div><br>
			<% end %>
		 	<% end %>
	</div>
	<p><br><br></p>
	<% end %>
	</div>
<% end %>

