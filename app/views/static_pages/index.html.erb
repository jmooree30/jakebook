<% if !user_signed_in? %>
<%= render 'devise/sessions/new' %>
<%= render 'devise/registrations/new' %>
<% else %>
<h1>News Feed</h1>
<div class="container">

<% @posts.each do |post| %>
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div id="one" class="col-sm-6">
        <div class='name'>
            <%= image_tag post.user.avatar.url(:thumb) %>
            <div class='namename'>
                <%= post.user.name %> shared:<br><br>
            </div>
        </div>
        <%= post.body %><br>
        <div class='name'>
            <%= link_to like_post_path(post), method: :put do %>
            <i class="glyphicon glyphicon-thumbs-up"></i>
            <%= post.get_upvotes.size %>
            <% end %>
            <%= link_to dislike_post_path(post), method: :put do %>
            <i class="glyphicon glyphicon-thumbs-down"></i>
            <%= post.get_downvotes.size %>
            <% end %>


            <%= form_for @comment do |c| %>
            <%= c.text_area :body, style: 'height:30px; border-radius:5px; width:25%; float:left;' %>
            <%= c.hidden_field :post_id, :value => post.id %>
            <%= c.hidden_field :name, :value => current_user.name %>
            <%= c.submit "comment", style: "float:left;" %><br><br>

            <% end %>

            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Comments
                  <span class="caret"></span></button><br><br>
                  <ul class="dropdown-menu">
                    <% @comments.each do |z| %>
                    <% if z.post_id == post.id %>
                    <li><%= z.name %> Commented: <%= z.body %></li>
                    <% end %>
                    <% end %>
                </ul>
            </div>
            <div class="col-sm-3">
            </div>
        </div>
    </div>
</div>
<% end %>
<% end %>
